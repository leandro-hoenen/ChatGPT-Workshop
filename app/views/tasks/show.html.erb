<p style="color: green"><%= notice %></p>

<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h2><%=@task.name%></h2>
    </div>
    <div class="card-body">
      <%= @task.description %>
    </div>
    <div class="card-footer text-right">
      <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-primary mr-2" %>
      <%= link_to "Back to tasks", tasks_path, class: "btn btn-secondary" %>
    </div>
    <div class="card-footer text-left">
      <%= button_to "Delete", @task, method: :delete, class: "btn btn-danger ml-2", data: { confirm: "Are you sure you want to delete this task?" } %>
    </div>
  </div>
</div>
