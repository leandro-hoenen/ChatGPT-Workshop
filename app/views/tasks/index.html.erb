
<p style="color: green"><%= notice %></p>

<div class="page-title">
  <h1>Tasks</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= link_to task.name, task %></td>
        <td>
          <%= link_to "Edit", edit_task_path(task), class: "btn btn-primary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New task", new_task_path, class: "btn btn-success" %>
